<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.erotourtes.harpoon</id>
    <name>Harpooner</name>
    <vendor email="erotourtes@gmail.com" url="https://github.com/erotourtes">erotourtes</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends optional="true" config-file="com.github.erotourtes.harpoon-ideavim.xml">IdeaVIM</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- The service is now light-weight and does not require defining it in the plugin.xml -->
        <!--        <projectService-->
        <!--                serviceImplementation="com.github.erotourtes.harpoon.services.HarpoonService"/>-->
        <postStartupActivity
                implementation="com.github.erotourtes.harpoon.listeners.ProjectOnStartListener"/>
        <applicationService
                serviceImplementation="com.github.erotourtes.harpoon.settings.SettingsState"/>
        <applicationConfigurable
                parentId="tools"
                instance="com.github.erotourtes.harpoon.settings.SettingsConfigurable"
                key="extension.com.github.erotourtes.harpoon.settings"/>
    </extensions>

    <actions resource-bundle="messages.HarpoonerBundle">
        <group id="com.github.erotourtes.harpoon.pluginsGroup" popup="true" icon="/icons/pluginIcon.svg">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </group>

        <group id="com.github.erotourtes.harpoon.pluginsGroup.replaceFiles" popup="true">
            <add-to-group group-id="com.github.erotourtes.harpoon.pluginsGroup" anchor="last"/>
        </group>

        <group id="com.github.erotourtes.harpoon.pluginsGroup.openFiles"
               popup="true">
            <add-to-group group-id="com.github.erotourtes.harpoon.pluginsGroup" anchor="last"/>
        </group>


        <!--
        #### File actions ####
        -->

        <action id="HarpoonerAddFile" class="com.github.erotourtes.harpoon.actions.file.AddFileAction">
            <add-to-group group-id="com.github.erotourtes.harpoon.pluginsGroup"/>
        </action>

        <action id="HarpoonerRemoveFile" class="com.github.erotourtes.harpoon.actions.file.RemoveFileAction">
            <add-to-group group-id="com.github.erotourtes.harpoon.pluginsGroup"/>
        </action>

        <action id="HarpoonerToggleFile" class="com.github.erotourtes.harpoon.actions.file.ToggleFileAction">
            <add-to-group group-id="com.github.erotourtes.harpoon.pluginsGroup"/>
        </action>


        <action id="HarpoonerReplaceFile0" class="com.github.erotourtes.harpoon.actions.file.ReplaceFileAction0">
            <add-to-group group-id="com.github.erotourtes.harpoon.pluginsGroup.replaceFiles"/>
        </action>

        <action id="HarpoonerReplaceFile1" class="com.github.erotourtes.harpoon.actions.file.ReplaceFileAction1">
            <add-to-group group-id="com.github.erotourtes.harpoon.pluginsGroup.replaceFiles"/>
        </action>

        <action id="HarpoonerReplaceFile2" class="com.github.erotourtes.harpoon.actions.file.ReplaceFileAction2">
            <add-to-group group-id="com.github.erotourtes.harpoon.pluginsGroup.replaceFiles"/>
        </action>

        <action id="HarpoonerReplaceFile3" class="com.github.erotourtes.harpoon.actions.file.ReplaceFileAction3">
            <add-to-group group-id="com.github.erotourtes.harpoon.pluginsGroup.replaceFiles"/>
        </action>

        <action id="HarpoonerReplaceFile4" class="com.github.erotourtes.harpoon.actions.file.ReplaceFileAction4">
            <add-to-group group-id="com.github.erotourtes.harpoon.pluginsGroup.replaceFiles"/>
        </action>

        <action id="HarpoonerReplaceFile5" class="com.github.erotourtes.harpoon.actions.file.ReplaceFileAction5">
            <add-to-group group-id="com.github.erotourtes.harpoon.pluginsGroup.replaceFiles"/>
        </action>

        <action id="HarpoonerReplaceFile6" class="com.github.erotourtes.harpoon.actions.file.ReplaceFileAction6">
            <add-to-group group-id="com.github.erotourtes.harpoon.pluginsGroup.replaceFiles"/>
        </action>

        <action id="HarpoonerReplaceFile7" class="com.github.erotourtes.harpoon.actions.file.ReplaceFileAction7">
            <add-to-group group-id="com.github.erotourtes.harpoon.pluginsGroup.replaceFiles"/>
        </action>

        <action id="HarpoonerReplaceFile8" class="com.github.erotourtes.harpoon.actions.file.ReplaceFileAction8">
            <add-to-group group-id="com.github.erotourtes.harpoon.pluginsGroup.replaceFiles"/>
        </action>

        <action id="HarpoonerReplaceFile9" class="com.github.erotourtes.harpoon.actions.file.ReplaceFileAction9">
            <add-to-group group-id="com.github.erotourtes.harpoon.pluginsGroup.replaceFiles"/>
        </action>

        <!--
        #### Menu actions ####
        -->
        <action id="HarpoonerQuickMenu" class="com.github.erotourtes.harpoon.actions.menu.OpenMenuAction"/>
        <action id="HarpoonerOpenMenu" class="com.github.erotourtes.harpoon.actions.menu.OpenMenuAction">
            <add-to-group group-id="com.github.erotourtes.harpoon.pluginsGroup"/>
        </action>

        <action id="HarpoonerToggleQuickMenu" class="com.github.erotourtes.harpoon.actions.menu.ToggleMenuAction"/>
        <action id="HarpoonerToggleMenu" class="com.github.erotourtes.harpoon.actions.menu.ToggleMenuAction">
            <add-to-group group-id="com.github.erotourtes.harpoon.pluginsGroup"/>
        </action>

        <action id="HarpoonerClearMenu" class="com.github.erotourtes.harpoon.actions.menu.ClearMenuAction">
            <add-to-group group-id="com.github.erotourtes.harpoon.pluginsGroup"/>
        </action>

        <!--
        #### Navigation actions ####
        -->

        <action id="HarpoonerOpenFile0" class="com.github.erotourtes.harpoon.actions.navigate.OpenFileAction0">
            <add-to-group group-id="com.github.erotourtes.harpoon.pluginsGroup.openFiles"/>
        </action>

        <action id="HarpoonerOpenFile1" class="com.github.erotourtes.harpoon.actions.navigate.OpenFileAction1">
            <add-to-group group-id="com.github.erotourtes.harpoon.pluginsGroup.openFiles"/>
        </action>

        <action id="HarpoonerOpenFile2" class="com.github.erotourtes.harpoon.actions.navigate.OpenFileAction2">
            <add-to-group group-id="com.github.erotourtes.harpoon.pluginsGroup.openFiles"/>
        </action>

        <action id="HarpoonerOpenFile3" class="com.github.erotourtes.harpoon.actions.navigate.OpenFileAction3">
            <add-to-group group-id="com.github.erotourtes.harpoon.pluginsGroup.openFiles"/>
        </action>

        <action id="HarpoonerOpenFile4" class="com.github.erotourtes.harpoon.actions.navigate.OpenFileAction4">
            <add-to-group group-id="com.github.erotourtes.harpoon.pluginsGroup.openFiles"/>
        </action>

        <action id="HarpoonerOpenFile5" class="com.github.erotourtes.harpoon.actions.navigate.OpenFileAction5">
            <add-to-group group-id="com.github.erotourtes.harpoon.pluginsGroup.openFiles"/>
        </action>

        <action id="HarpoonerOpenFile6" class="com.github.erotourtes.harpoon.actions.navigate.OpenFileAction6">
            <add-to-group group-id="com.github.erotourtes.harpoon.pluginsGroup.openFiles"/>
        </action>

        <action id="HarpoonerOpenFile7" class="com.github.erotourtes.harpoon.actions.navigate.OpenFileAction7">
            <add-to-group group-id="com.github.erotourtes.harpoon.pluginsGroup.openFiles"/>
        </action>

        <action id="HarpoonerOpenFile8" class="com.github.erotourtes.harpoon.actions.navigate.OpenFileAction8">
            <add-to-group group-id="com.github.erotourtes.harpoon.pluginsGroup.openFiles"/>
        </action>

        <action id="HarpoonerOpenFile9" class="com.github.erotourtes.harpoon.actions.navigate.OpenFileAction9">
            <add-to-group group-id="com.github.erotourtes.harpoon.pluginsGroup.openFiles"/>
        </action>

        <action id="HarpoonerNextFileAction" class="com.github.erotourtes.harpoon.actions.navigate.OpenNextFileAction"/>
        <action id="HarpoonerOpenNextFile" class="com.github.erotourtes.harpoon.actions.navigate.OpenNextFileAction">
            <add-to-group group-id="com.github.erotourtes.harpoon.pluginsGroup.openFiles"/>
        </action>

        <action id="HarpoonerPreviousFileAction"
                class="com.github.erotourtes.harpoon.actions.navigate.OpenPreviousFileAction"/>
        <action id="HarpoonerOpenPreviousFile"
                class="com.github.erotourtes.harpoon.actions.navigate.OpenPreviousFileAction">
            <add-to-group group-id="com.github.erotourtes.harpoon.pluginsGroup.openFiles"/>
        </action>

    </actions>

    <resource-bundle>messages.HarpoonerBundle</resource-bundle>
</idea-plugin>
